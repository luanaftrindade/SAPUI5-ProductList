<mvc:View
    controllerName="sap.ui.demo.walkthrough.controllers.NewProductList"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
>
    <Table
        id="productsList"
        headerText="{i18n>productList}"
        class="sapUiResponsiveMargin"
        width="auto"
        items="{invoice>/Products}"
        itemPress="onListItemPress"
    >
        <headerToolbar>
            <Toolbar>
                <Title text="{i18n>productList}" />
                <ToolbarSpacer />
                <SearchField
                    width="50%"
                    search=""
                />
            </Toolbar>
        </headerToolbar>
        <columns>
            <Column>
                <Text text="{i18n>discontinued}" />
            </Column>
            <Column>
                <Text text="{i18n>productName}" />
            </Column>
            <Column>
                <Text text="{i18n>quantityPerUnit}" />
            </Column>

            <Column>
                <Text text="{i18n>unitsInStock}" />
            </Column>
        </columns>
        <items>
            <ColumnListItem type="Navigation" press="onPress">
                <cells>
                    <HBox>
                        <items>
                            <Text
                                class="{= ${invoice>Discontinued} ? 'redStatus' : 'greenStatus' }"
                                text="{= ${invoice>Discontinued} ? 'Discontinued' : 'Available' }"
                            />
                        </items>
                    </HBox>
                    <VBox>
                        <Text text="{invoice>ProductName}" />
                        <Text text="{invoice>ProductID}" />
                    </VBox>
                    <Text text="{invoice>QuantityPerUnit}" />
                    <Text text="{invoice>UnitsInStock}" />
                </cells>
            </ColumnListItem>
        </items>
    </Table>
</mvc:View>
