<mvc:View
    controllerName="sap.ui.demo.walkthrough.controllers.NewProductList"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
>
    <Table
        headerText="{i18n>newProductList}"
        class="sapUiResponsiveMargin"
        width="auto"
        items="{invoice>/Products}"
    >
        <columns>
            <Column>
                <Text text="{i18n>discontinued}" />
            </Column>
            <Column>
                <Text text="{i18n>productName}" />
            </Column>
            <Column>
                <Text text="{i18n>quantityPerUnit}" />
            </Column>

            <Column>
                <Text text="{i18n>unitsInStock}" />
            </Column>
        </columns>
        <items>
            <ColumnListItem>
                <cells>
                    <HBox>
                        <items>
                            <Text
                                class="{= ${invoice>Discontinued} ? 'redStatus' : 'greenStatus' }"
                                text="{= ${invoice>Discontinued} ? 'Discontinued' : 'Available' }"
                            />
                        </items>
                    </HBox>
                    <VBox>
                        <Text text="{invoice>ProductName}" />
                        <Text text="{invoice>ProductID}" />
                    </VBox>
                    <Text text="{invoice>QuantityPerUnit}" />
                    <Text text="{invoice>UnitsInStock}" />
                </cells>
            </ColumnListItem>
        </items>
    </Table>
</mvc:View>
