<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog
        id="productDetailsDialog"
        title="See Price and Discounts"
    >
        <content>
            <core:Icon
                src="sap-icon://hello-world"
                size="8rem"
                class="sapUiMediumMargin"
            />
        </content>
        <beginButton>
            <Button
                text="{i18n>dialogCloseDetailsText}"
                press=".onCloseDialog"
            />
        </beginButton>
    </Dialog>
</core:FragmentDefinition>
