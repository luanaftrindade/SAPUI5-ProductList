<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog
        id="productDetailsDialog"
        title="Discontinue Product"
    >
        <content>
                <Text textAlign="Center"
                    text="Are you sure you want to mark this product as discontinued?"
                />
        </content>
        <beginButton>
            <Button
                text="{i18n>yesText}"
                press=".onCloseDialog"
            />
        </beginButton>
        <endButton>
            <Button
                text="{i18n>noText}"
                press=".onCloseDialog"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
