<mvc:View
    controllerName="productmanagement.app.controllers.App"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    id="mainpage"
>
    <Page title="{ i18n>mainpageTitle }">
        <headerContent>
            <Button
                icon="sap-icon://hello-world"
                press=".onShowProductDetails"
            />
        </headerContent>
        <content>
            <mvc:XMLView
                viewName="productmanagement.app.views.MainTopSection"
            />
            <mvc:XMLView
                viewName="productmanagement.app.views.ProductList"
            />
        </content>
    </Page>
</mvc:View>
