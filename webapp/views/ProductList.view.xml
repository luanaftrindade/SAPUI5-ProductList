<mvc:View
    controllerName="sap.ui.demo/walkthrough.controllers.ProductList"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
>
    <Shell>
        <App class="productListMainApp">
            <pages>
                <Page title="{i18n>ProductListTitle}">
                    <headerContent>
                        <Button
                            icon="sap-icon://loan"
                            press=".onOpenDetailsDialog"
                        />
                    </headerContent>
                    <content>
                        <Panel
                            headerText="{i18n>firstPanelTitle}"
                            class="sapUiResponsiveMargin"
                            width="auto"
                        >
                            <content>
                                <mvc:XMLView
                                    viewName="sap.ui.demo.walkthrough.views.ProductDetails"
                                />
                            </content>
                        </Panel>
                    </content>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>
