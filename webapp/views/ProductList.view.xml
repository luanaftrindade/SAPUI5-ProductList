<mvc:View
    controllerName="sap.ui.demo/walkthrough.controllers.ProductList"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
>
    <Shell>
        <App class="productListMainApp">
            <pages>
                <Page title="{i18n>ProductListTitle}">
                    <content>
                        <Panel
                            headerText="{i18n>firstPanelTitle}"
                            class="sapUiResponsiveMargin"
                            width="auto"
                        >
                            <content>
                                <Button
                                    text="{i18n>showDetailsButton}"
                                    press=".onShowProductDetails"
                                    class="showDetailsButton"
                                />
                                <Input
                                    value="{/recipient/name}"
                                    description="Message from {/recipient/name}"
                                    valueLiveUpdate="true"
                                    width="60%"
                                />
                                <FormattedText
                                    htmlText="Be welcome, {/recipient/name}"
                                    class="sapUiSmallMargin sapThemeHighlight-asColor myCustomText"
                                />
                            </content>
                        </Panel>
                    </content>
                </Page>
                <Page>
                    <content>
                        <mvc:XMLView
                            viewName="sap.ui.demo.walkthrough.views.ProductDetails"
                        />
                    </content>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>
