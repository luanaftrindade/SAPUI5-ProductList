<mvc:View
    controllerName="sap.ui.demo.walkthrough.controllers.Details"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    id="details"
>
    <Page
        title="{i18n>detailsPageTitle}"
        showNavButton="true"
        navButtonPress=".onNavigationBack"
    >
        <FlexBox
            alignItems="Center"
            justifyContent="SpaceBetween"
        >
            <Panel>
                <ObjectHeader
                    intro="{products>ProductID}"
                    title="{products>ProductName}"
                />
            </Panel>
            <Button
                id="discontinuedButton"
                icon="sap-icon://alert"
                text="{i18n>discontinued}"
                press=".markAsDiscontinued"
                enabled="{= !${products>Discontinued}}"
            />
        </FlexBox>
        <Panel>
            <FlexBox
                justifyContent="SpaceAround"
                alignItems="Center"
            >
                <HBox>
                    <VBox class="detailItem">
                        <Label text="ID" />
                        <Text text="{products>ProductID}" />
                    </VBox>
                    <VBox class="detailItem">
                        <Label text="Name" />
                        <Text text="{products>ProductName}" />
                    </VBox>
                    <VBox class="detailItem">
                        <Label text="Quantity Per Unit" />
                        <Text text="{products>QuantityPerUnit}" />
                    </VBox>
                    <VBox class="detailItem">
                        <Label text="Category" />
                        <Text text="{products>CategoryID}" />
                    </VBox>
                    <VBox class="detailItem">
                        <Label text="Status" />
                        <Text
                            text="{= ${products>Discontinued} ? 'Discontinued' : 'Active'}"
                        />
                    </VBox>
                    <VBox class="detailItem">
                        <Label text="Units On Order" />
                        <Text text="{products>UnitsOnOrder}" />
                    </VBox>
                    <VBox class="detailItem">
                        <Label text="Units In Stock" />
                        <Text text="{products>UnitsInStock}" />
                    </VBox>
                </HBox>
            </FlexBox>
        </Panel>
        <Panel id="supplierDetailsPage" />
        <content>
            <Table
                id="orderDetailsTable"
                mode="SingleSelectMaster"
                items="{
        path: '/orderDetails',
        templateShareable: false
    }"
            >
                <columns>
                    <Column>
                        <Text text="Product ID" />
                    </Column>
                    <Column>
                        <Text text="Quantity" />
                    </Column>
                    <Column>
                        <Text text="Unit Price" />
                    </Column>
                    <Column>
                        <Text text="Discount" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{ProductID}" />
                            <Text text="{Quantity}" />
                            <Text text="{UnitPrice}" />
                            <Text text="{Discount}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>
