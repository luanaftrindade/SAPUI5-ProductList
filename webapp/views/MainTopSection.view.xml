<mvc:View
    controllerName="sap.ui.demo.walkthrough.controllers.MainTopSection"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
>
    <Panel
        headerText="{i18n>productDetailsHeaderText}"
        class="sapUiResponsiveMargin"
        width="auto"
    >
        <content>
            <Button
                id="showMoreDetailsButton"
                icon="sap-icon://loan"
                text="{i18n>openMoreDetailsText}"
                press=".onShowMoreDetails"
                class="sapUiSmallMarginEnd"
            />
            <Button
                text="{i18n>showDetailsButton}"
                press=".onShowProductDetails"
                class="showDetailsButton"
            />
            <Input
                value="{/recipient/name}"
                description="Message from {/recipient/name}"
                valueLiveUpdate="true"
                width="60%"
            />
            <FormattedText
                htmlText="Be welcome, {/recipient/name}"
                class="sapUiSmallMargin sapThemeHighlight-asColor myCustomText"
            />
        </content>
    </Panel>
</mvc:View>
